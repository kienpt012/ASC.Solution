@model ASC.Web.Areas.Accounts.Models.ProfileViewModel
@{
    Layout = "_SecureLayout";
}
<div class="container-fluid" style="min-height: calc(100vh - 300px);">
    <div class="row padding-left-20px padding-right-20px">
        <div class="row z-depth-3">
            <div class="col s12 padding-0px">
                <div class="section white-text padding-left-10px blue-grey lighten-1">
                    <h5>Profile</h5>
                </div>
                <div class="divider"></div>
                <form asp-controller="Account" asp-action="Profile" method="post" class="col s12" id="fromUser">
                    <div class="row" style="margin-top: 20px;">
                        <div class="input-field col s8">
                            <input asp-for="Username" class="validate" />
                            <label asp-for="Username"></label>
                        </div>
                        <div class="input-field col s4 right-align">
                            <button class="btn waves-effect waves-light btnSubmit" type="submit" name="action">
                                Save
                                <i class="material-icons right">send</i>
                            </button>
                            <button class="btn waves-effect waves-light reset red lighten-1" type="button" name="action">
                                Reset
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 right-align" asp-validation-summary="All"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle Reset functionality
            $(document).on("click", ".reset", function () {
                $("#fromUser")[0].reset();
                // $(".btnSubmit").text("Create");
            });
            // Set hidden Email field to correct value from UI field
            $(document).on("click", ".btnSubmit", function () {
                M.updateTextFields();
            });
        });
    </script>
}